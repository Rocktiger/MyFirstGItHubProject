<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_tran"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_adasda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_risus" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_adasda">

        <RelativeLayout
            android:id="@+id/kp_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp">


            <com.nb.mengbiao.myfirstgithubproject.view.SmileRatingView
                android:id="@+id/smile_rating"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:gravity="center" />

            <com.nb.mengbiao.myfirstgithubproject.tablayout.TagFlowLayout
                android:id="@+id/tfl_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/smile_rating"
                android:layout_marginRight="16dp"
                android:paddingLeft="32dp" />

            <com.nb.mengbiao.myfirstgithubproject.view.CountEditText
                android:id="@+id/cet_suees"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/tfl_tag"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="10dp" />

            <com.nb.mengbiao.myfirstgithubproject.view.CommentDetailView
                android:id="@+id/cdv_deatil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cet_suees"
                android:layout_marginTop="20dp"
                android:background="@drawable/edtext_area_shape" />


        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/iv_dasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/icon_risus" />

</RelativeLayout>
